<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" href="appointmentStyle.css" />
    <title>Appointments</title>
</head>
<body>
    <h3>All Appointments</h3>
    <% if (appointments.length === 0) { %>
        <p>No appointments found.</p>
    <% } else { %>
        <% for (let appt of appointments) { %>
            <div class="appointment">
                <p><strong>Department:</strong> <%= appt.department %></p>
                <p><strong>Doctor:</strong> <%= appt.doctor %></p>
                <p><strong>Patient Name:</strong> <%= appt.patient_name %></p>
                <p><strong>Patient Email:</strong> <%= appt.patient_email %></p>
                <p><strong>Date:</strong> <%= appt.appointment_date %></p>
                <p><strong>Time:</strong> <%= appt.appointment_time %></p>
                <hr />
            </div>
        <% } %>
    <% } %>
</body>
</html>
